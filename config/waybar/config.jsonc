{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "height": 10,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,

  "modules-left": ["custom/padd","custom/l_end","cpu","memory","custom/cpuinfo","custom/r_end"],
  "modules-center": ["custom/padd","custom/l_end","custom/ethiopian_day","clock","custom/r_end","custom/padd"],
  "modules-right": ["custom/padd","custom/l_end","network","custom/r_end","custom/l_end","backlight","pulseaudio","pulseaudio#microphone","custom/updates","custom/r_end","custom/l_end","bluetooth","privacy","tray" ,"custom/r_end"],

  "cpu": {
    "interval": 10,
    "format": "󰍛 {usage}%",
    "format-icons": ["▁","▂","▃","▄","▅","▆","▇","█"]
  },

  "memory": {
    "interval": 30,
    "format": "󰾆 {used}GB",
    "format-alt": "󰾆 {percentage}%",
    "tooltip-format": "󰾆 {percentage}%\n {used:0.1f}GB/{total:0.1f}GB",
    "states": { "c": 90, "h": 60, "m": 30 }
  },


  "clock": {
    "format": "{:%d • %H:%M}",
    "format-alt": "{:%R 󰃭 %d·%m·%y}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3
    }
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "active-only": false,
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1"
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["","","","","","","","",""],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-"
  },

  "network": {
    "format-wifi": " <span foreground='#ffffff'> {bandwidthDownBytes}</span> <span foreground='#ffffff'> {bandwidthUpBytes}</span>",
    "format-ethernet": "󰈀 <span foreground='#ffffff'> {bandwidthDownBytes}</span> <span foreground='#ffffff'> {bandwidthUpBytes}</span>",
    "format-disconnected": "<span foreground='#ffffff'>󰖪 No Network</span>",
    "interval": 2
  },

  "pulseaudio": {
    "format": "{icon} {volume}",
    "format-muted": "󰸈",
    "on-click": "xdg-terminal-exec --app-id=com.omarchy.Wiremix -e wiremix",
    "on-click-right": "volumecontrol.sh -s ''",
    "on-scroll-up": "volumecontrol.sh -o i",
    "on-scroll-down": "volumecontrol.sh -o d",
    "tooltip-format": "{icon} {desc} // {volume}%",
    "format-icons": { "default": ["","",""] }
  },
  "custom/ethiopian_day": {
    "exec": "ethiocal day",
    "interval": 60,
    "format": "{:>2} • ",              // shows only day in the bar
    "tooltip": false,
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "",
    "format-source-muted": "",
    "on-click": "pavucontrol -t 4",
    "tooltip-format": "{format_source} {source_desc} // {source_volume}%"
  },

  "tray": { "icon-size": 18, "spacing": 5 },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "states": { "good": 95, "warning": 30, "critical": 20 }
  },

  "custom/padd": { "format": "  " },
  "custom/l_end": { "format": " " },
  "custom/r_end": { "format": " " }
}
